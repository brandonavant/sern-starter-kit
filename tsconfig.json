{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build",
    "rootDir": "server",
    "resolveJsonModule": true,
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*"]
}
